<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NYTimes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_500</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="buttonView" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/CustomButtonThemeOverlay</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name="CustomButtonThemeOverlay">
        <item name="colorPrimary">@color/teal_700</item>
    </style>
      <style name="Theme.NYTimes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TopTabsNavigation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TopTabsNavigation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>